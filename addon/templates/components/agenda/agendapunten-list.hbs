<div style="height:70vh; max-height:none;">
  <table class="data-table">
    <thead>
      <tr>
        {{!-- <th class="u-align-right" style="max-width: 4rem;">Orde</th> --}}
        <th style="width: 600px;">Titel agendapunt</th>
        <th>Geplande openbaarheid</th>
        <th>Openbaarheid behandeling</th>
        <th>
          <div class="grid">
            <div class="col--2-12">Acties</div>
            <div class="col--10-12 u-align-right">
              {{#wu-button
                   class="button"
                   size="small"
                   isNarrow=true
                   onClick=(action create)}}
                <i class="vi vi-plus vi-u-xs"></i> Voeg agendapunt toe
              {{/wu-button}}
            </div>
          </div>
        </th>
      </tr>
    </thead>

    {{#sortable-objects tagName="tbody" sortableObjectList=agendapunten enableSort=true useSwap=true inPlace=true}}
      {{#each agendapunten as |agendapunt|}}
        {{#draggable-object tagName="tr" content=agendapunt isSortable=true}}
          {{!--  <td class="u-align-right">1</td> --}}
          <td>
            <p>{{agendapunt.titel}}</p>
          </td>
          <td>
            {{if agendapunt.geplandOpenbaar "Openbaar" "Besloten"}}
          </td>
          <td>
            {{if agendapunt.bvapOpenbaar "Openbaar" "Besloten"}}
          </td>
          <td>
            {{#wu-button-group}}
              {{#wu-button
                   class="button delete-me-switch-move-agendapunt"
                   size="small"
                   isAlt=true
                   isNarrow=true
                   label="Bewerk"
                   onClick=(action edit agendapunt)}}
                <i class="vi vi-edit"></i> Bewerk agendapunt
              {{/wu-button}}
              <span style="cursor:pointer">&varr;</span>
            {{/wu-button-group}}
          </td>
        {{/draggable-object}}
      {{else}}
        <tr>
          <td colspan="3">Geen agendapunten gevonden.</td>
        </tr>
      {{/each}}
    {{/sortable-objects}}
  </table>
</div>
